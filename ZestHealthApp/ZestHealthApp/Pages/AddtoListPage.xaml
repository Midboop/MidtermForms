                </magic:GradientView.GradientSource>
            </magic:GradientView>

            <Frame Grid.Row="1" Grid.RowSpan="4"
                 Margin="12"
                 Padding="30"
                 BackgroundColor="WhiteSmoke"
                 HasShadow="True"
                 HorizontalOptions="Center"
                 VerticalOptions="Center"
                 CornerRadius="20">
                <Grid>
                   
                    <Label Grid.Row="0" Text="New Item" FontSize="Subtitle" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="DarkCyan"/>
                    <Entry Grid.Row="1" x:Name="ItemEntry" Placeholder="Name" Text="{Binding ItemName}"/>
                    <Entry Grid.Row="2" x:Name="Amount" Placeholder="Quantity                        " Keyboard="Numeric" Text="{Binding Amount}"/>
                    <lottie:AnimationView x:Name="SubmitAnim" Grid.Row="3" AutoPlay="False" HorizontalOptions="FillAndExpand" Speed="1.7" VerticalOptions="FillAndExpand" Loop ="False" OnFinish="Handle_OnFinish" Animation="submit2lottie.json"/>
                    <Button Grid.Row="3" x:Name="SubmitButton" HeightRequest="60" BackgroundColor="Transparent" Command="{Binding AddShoppingListCommand}" Clicked="SubmitAddItem"/>


                </Grid>
            </Frame>
            <lottie:AnimationView x:Name="CancelAnim" Grid.Row="5" AutoPlay="True" Speed="1.5" Loop ="True" Animation="cancel3lottie.json"/>
            <Button Grid.Row="5" x:Name="CancelButton" BackgroundColor="Transparent" Clicked="CancelButton_Clicked"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>